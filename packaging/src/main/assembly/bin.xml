<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>bin</id>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
    </formats>
    <baseDirectory>sicau-rail_transit-${project.version}-bin</baseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <useProjectArtifact>true</useProjectArtifact>
            <useStrictFiltering>true</useStrictFiltering>
            <includes>
                <include>com.typesafe:config</include>
                <include>org.apache.commons</include>
                <include>org.apache.spark:spark-sql-kafka-0-10_2.12</include>
                <include>org.apache.spark:spark-token-provider-kafka-0-10_2.12</include>
                <include>org.apache.kafka:kafka-clients:jar</include>
                <include>com.alibaba:fastjson</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.parent.basedir}/data-migration/target</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <fileMode>755</fileMode>
            <directory>${project.parent.basedir}/bin</directory>
            <includes>
                <include>*.sh</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/data-generation/target</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*bin.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/data-preparation/target</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/data-distribution/target</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>

    <files>
        <!--data-generation模块的文件-->
        <file>
            <source>${project.parent.basedir}/data-generation/src/main/resources/db.properties</source>
            <outputDirectory>conf/data-generation</outputDirectory>
            <destName>db.properties</destName>
        </file>
        <file>
            <source>${project.parent.basedir}/data-generation/src/main/resources/kafka.properties</source>
            <outputDirectory>conf/data-generation</outputDirectory>
            <destName>kafka.properties</destName>
        </file>
        <file>
            <source>${project.parent.basedir}/data-generation/src/main/resources/logback.xml</source>
            <outputDirectory>conf/data-generation</outputDirectory>
            <destName>logback.xml</destName>
        </file>
        <!--data-migration模块的文件-->
        <file>
            <source>${project.parent.basedir}/data-migration/src/main/resources/migration.conf</source>
            <outputDirectory>conf/data-migration</outputDirectory>
            <destName>migration.conf</destName>
        </file>
        <file>
            <source>${project.parent.basedir}/data-migration/src/main/resources/core-site-client.xml</source>
            <outputDirectory>conf/data-migration</outputDirectory>
            <destName>core-site-client.xml</destName>
        </file>
        <file>
            <source>${project.parent.basedir}/data-migration/src/main/resources/hdfs-site-client.xml</source>
            <outputDirectory>conf/data-migration</outputDirectory>
            <destName>hdfs-site-client.xml</destName>
        </file>
        <!--task-scheduling模块的文件-->
        <file>
            <source>${project.parent.basedir}/task-scheduling/src/distribution_task.py</source>
            <outputDirectory>scheduler</outputDirectory>
            <destName>distribution_task.py</destName>
        </file>
        <file>
            <source>${project.parent.basedir}/task-scheduling/src/read_html.py</source>
            <outputDirectory>scheduler</outputDirectory>
            <destName>read_html.py</destName>
        </file>
        <file>
            <source>${project.parent.basedir}/task-scheduling/resources/distribution_alarm_test.html</source>
            <outputDirectory>scheduler/html</outputDirectory>
            <destName>distribution_alarm_test.html</destName>
        </file>
        <!--data-distribution模块的文件-->
        <file>
            <source>${project.parent.basedir}/data-distribution/src/main/resources/distribution.conf</source>
            <outputDirectory>conf/data-distribution</outputDirectory>
            <destName>distribution.conf</destName>
        </file>
    </files>
</assembly>